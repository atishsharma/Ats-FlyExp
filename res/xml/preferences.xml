<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/uisettings" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="displayhiddenfiles"
            android:title="@string/hiddenfiles" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="showpreview"
            android:title="@string/showpreview" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/sortentries"
            android:entryValues="@array/sortvalues"
            android:key="sort"
            android:title="@string/sort" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/viewentries"
            android:entryValues="@array/viewvalues"
            android:key="viewmode"
            android:title="@string/viewmode" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/advancedsettings" >
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/themes"
            android:entryValues="@array/appearance_types_values"
            android:key="preference_theme"
            android:title="@string/theme" />

        <EditTextPreference
            android:dialogTitle="@string/defaultdir"
            android:key="defaultdir"
            android:title="@string/defaultdir" />
    </PreferenceCategory>

    <PreferenceScreen android:title="@string/ats" >
        <intent
            android:action="android.intent.action.VIEW"
            android:data="http://atsak.in" >
        </intent>
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/github" >
        <intent
            android:action="android.intent.action.VIEW"
            android:data="http://github.com/atishsharma/Ats-FlyExp" >
        </intent>
    </PreferenceScreen>
</PreferenceScreen>
